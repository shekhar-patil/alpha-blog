<h1 align="center">Log In</h1>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(:session, :html => { class: 'form-horizontal', role: 'form' }, url: login_path) do |f| %>

      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :email %><br/>
        </div>
        <div class='col-sm-8'>
          <%= f.email_field :email, class: 'form-control', id: 'email', placeholder: 'Enter email' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :password %><br/>
        </div>
        <div class='col-sm-8'>
          <%= f.password_field :password, class: 'form-control', id: 'password', placeholder: 'Enter password' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit('Log In', class:'btn btn-primary btn-default') %>
        </div>
      </div>

      <div class="col-xs-4 col-xs-offset-4">
        [<%= link_to 'Back article listing page', articles_path %>]
      </div>
    <% end %>
  </div>
</div>

