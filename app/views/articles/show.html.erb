<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <ul class="listing">
    <div class="row" align="center">
      <div class="col-md-6 col-md-offset-3">
        Created_by:
        <li>
          <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
        </li>
        <li class="article-title">
          <%= link_to @article.user.username, user_path(@article.user) %>
        </li>
        <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %> </small></li>
      </div>
    </div>
  <ul class="listing">
  <h4 class="center"><strong>Description:</strong></h4>
  <h4 class="description"><%= @article.description %></h4>
  <div class="article-actions">
    <% if logged_in? && current_user == @article.user %>
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete', article_path(@article), method: :delete, class: "btn btn-xs btn-danger", data: { confirm: 'Do you want to delete this article' } %>
    <% end %>
    <%= link_to 'View all articles', articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>

